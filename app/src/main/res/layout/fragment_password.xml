<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_password_constraintlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_password_constraintlayout1_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Enter Passcode:"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:id="@+id/fragment_password_constraintlayout1_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_password_constraintlayout1_text">

            <TextView
                android:id="@+id/fragment_password_text0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="40sp"
                android:text="*"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/fragment_password_text1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="40sp"
                android:text="*"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/fragment_password_text2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="40sp"
                android:text="*"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/fragment_password_text3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="40sp"
                android:text="*"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_background"/>


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:id="@+id/fragment_password_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:rowCount="5"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_password_constraintlayout1"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/fragment_password_button1"
            android:text="1"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button2"
            android:text="2"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button3"
            android:text="3"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button4"
            android:text="4"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button5"
            android:text="5"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button6"
            android:text="6"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button7"
            android:text="7"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button8"
            android:text="8"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button9"
            android:text="9"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/fragment_password_button0"
            android:text="0"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:background="?android:selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/fragment_password_button_back"
            android:textSize="60sp"
            android:padding="0dp"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:src="@mipmap/ic_backspace"
            android:scaleType="center"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <ImageButton
            android:id="@+id/fragment_password_button_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:src="@mipmap/ic_fingerprint"
            android:scaleType="center"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/fingerprint_icon_description" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>